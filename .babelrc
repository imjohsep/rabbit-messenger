{
    "plugins": ["transform-runtime", "transform-dev-warning"],
    "presets": ["es2015", "stage-2", "react"],
    "sourceRoot": "src",
    "env": {
        "development": {
            "presets": ["react-hmre"]
        },
        "production": {
            "plugins": [
                "transform-react-remove-prop-types",
                "transform-react-constant-elements",
                "transform-react-inline-elements"
            ]
        },
        "test": {
            "plugins": ["istanbul"]
        }
    }
}
